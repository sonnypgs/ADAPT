source 'https://rubygems.org'

gem 'require_all'             # require whole directories
gem 'net-ssh'                 # execute ssh commands
gem 'net-scp'                 # execute scp commands
gem 'mysql2'                  # mysql connector
gem 'sinatra'                 # web framework
gem 'sinatra-assetpack'       # sinatra addon for managing web assets
gem 'sinatra-contrib'         # sinatra addon for json support etc.
gem 'puma'                    # fast web server
gem 'shotgun'                 # reloads the server automatically
gem 'sass'                    # css on steroids
gem 'cloudstack_ruby_client'  # cloudstack api
gem 'warden'                  # authentication
gem 'sinatra-flash'           # flash messages
gem 'rake'                    # ruby make